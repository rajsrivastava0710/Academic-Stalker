<% include ../partials/header %>
<div class='container'>
	<div class='row'>
		<h1 id='frm-head'>Edit comment</h1>
		<div id='frm-width'>
			<form action = "/academics/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method='POST'>
				<!-- //we only need id of campground , that we will recieve while rendering -->
			<div class='form-group'>
				<label id='lbl'>Comment:</label>
				<input class='form-control' type='text' placeholder='Update your Comment' name='comment[text]' value="<%= comment.text %>">
			</div>

			<div class='form-group'>
				<button class='btn btn-lg btn-primary btn-block'>UPDATE</button>
			</div>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>