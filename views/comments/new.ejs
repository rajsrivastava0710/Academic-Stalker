<% include ../partials/header %>
<div class='container'>
	<div class='row'>
		<h1 id='frm-head'>Enter your comment for <%= campground.name %></h1>
		<div id='frm-width'>
			<form action = "/academics/<%= campground._id %>/comments" method='POST'>
			<div class='form-group'>
				<label id='lbl'>Comment:</label>
				<input class='form-control' type='text' placeholder='Enter ur comment' name='comment[text]'>
			</div>

			<div class='form-group'>
				<button class='btn btn-lg btn-primary btn-block'>Submit</button>
			</div>
			</form>
		</div>
	</div>
</div>

<% include ../partials/footer %>